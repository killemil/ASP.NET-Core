@model IEnumerable<CarModel>
@{
    ViewData["Title"] = "All Cars";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Make
            </th>
            <th>
                Model
            </th>
            <th>
                Travelled Distance
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>
                    @car.Make
                </td>
                <td>
                    @car.Model
                </td>
                <td>
                    @(car.TravelledDistance / 100) KM
                </td>
            </tr>
        }
    </tbody>
</table>


