@model AllCustomersModel

@{
    ViewData["Title"] = "All Customers";
}

<h2>@ViewData["Title"]</h2>
<h3>Ordered in @Model.OrderDirection.ToString().ToLower() direction</h3>

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Birth Date</th>
            <th>Young Driver</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.BirthDate.ToString("dd/MM/yyyy")</td>
                <td>@(customer.IsYoungDriver ? "Yes" : "No")</td>
                <td>
                    <a href="/customers/@customer.Id" class="btn btn-sm btn-default">Details</a>
                    <a href="/customers/edit/@customer.Id" class="btn btn-sm btn-warning">Edit</a>
                </td>
                
            </tr>
        }
    </tbody>
</table>
