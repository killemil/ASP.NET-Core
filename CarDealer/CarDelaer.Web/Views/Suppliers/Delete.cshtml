@model SupplierFormModel
@{
    ViewData["Title"] = "Delete supplier";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <hr />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" readonly/>
        </div>
        <div class="form-group">
            <input asp-for="IsImporter" readonly disabled/>
            <label asp-for="IsImporter"></label>
        </div>
        <a href="/suppliers/all" class="btn btn-primary">Back</a>
        <a href="/suppliers/ConfirmDelete?id=@Model.Id" class="btn btn-danger">Confirm Delete</a>
    </div>
</div>

