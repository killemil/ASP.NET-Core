@model CreateSaleConfirmFormModel
@{
    ViewData["Title"] = "Review Sale";
}

<h2>Confirm</h2>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <hr />
            <div class="form-group">
                <label asp-for="CustomerName"></label>
                <input asp-for="CustomerName" class="form-control" readonly/>
                <span asp-validation-for="CustomerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CustomerId" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="CarName"></label>
                <input asp-for="CarName" class="form-control" readonly/>
                <span asp-validation-for="CarName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="CarId" class="form-control" readonly/>
            </div>
            <div class="form-group">
                <label asp-for="Discount"></label>
                <input asp-for="Discount" class="form-control" readonly/>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" readonly/>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FinalPrice"></label>
                <input asp-for="FinalPrice" class="form-control" readonly/>
                <span asp-validation-for="FinalPrice" class="text-danger"></span>
            </div>
            <a class="btn btn-default" href="/sales/create">Cancel</a>
            <input type="submit" class="btn btn-success" value="Finalize" />
        </form>
    </div>
</div>