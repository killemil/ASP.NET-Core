@model IEnumerable<SaleModel>

@{
    ViewData["Title"] = "All Sales";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Car</th>
            <th>Customer Name</th>
            <th>Price With Discount</th>
            <th>Price Without Discount</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var sale in Model)
        {
            <tr>
                <td>@sale.Car.Make - @sale.Car.Model</td>
                <td>@sale.Customer.Name</td>
                <td>$@sale.PriceWithDiscount.ToString("F2")</td>
                <td>$@sale.PriceWithoutDiscount.ToString("F2")</td>
                <td><a href="/sales/@sale.Id" class="btn btn-sm btn-default">More Details</a></td>
            </tr>
        }
    </tbody>
</table>
