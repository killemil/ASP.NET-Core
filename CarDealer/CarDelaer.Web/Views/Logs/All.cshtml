@model LogPageListingModel
@{
    ViewData["Title"] = "All Logs";
}
<h2>@ViewData["Title"]</h2>
<div>
    <form class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="text" name="searchTerm" placeholder="Username...">
        <button class="btn btn-info" type="submit">Search</button>
    </form>
</div>
<div class="text-right">
    <a class="btn btn-lg btn-warning" href="/logs/clear">Clear All Logs</a>
</div>
<hr />
@{
    var previousDisabled = Model.CurrentPage == 1 ? "disabled" : string.Empty;
    var nextDisabled = Model.CurrentPage == Model.TotalPages ? "disabled" : string.Empty;
}

<div class="text-center">
    <ul class="pagination">
        <li class="page-item @previousDisabled">
            <a class="page-link @previousDisabled" href="/logs/all?page=@Model.PreviousPage" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>

        @for (int i = 1; i <= Model.TotalPages; i++)
        {

            <li class="page-item @(Model.CurrentPage == i ? "active" : string.Empty)"><a class="page-link" href="/logs/all?page=@i">@i</a></li>
        }
        <li class="page-item @nextDisabled">
            <a class="page-link @nextDisabled" href="/logs/all?page=@Model.NextPage" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</div>
<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>User</th>
            <th>Operation</th>
            <th>Modified Table</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var log in Model.Logs)
        {
            <tr>
                <td>@log.Username</td>
                <td>@log.Operation.ToString()</td>
                <td>@log.Table</td>
                <td>@log.Time.ToLocalTime()</td>
            </tr>
        }
    </tbody>
</table>
