@model UserProfileCourses
@{
    ViewData["Title"] = "My Courses";
    ViewData.AddActivePage(ManageNavPages.Courses);
}

<h2>@ViewData["Title"]</h2>

<table class="table table-hover table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Grade</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model.Courses)
        {
            <tr>
                <td>@course.Name</td>
                <td>@course.StartDate.ToShortDateString()</td>
                <td>@course.EndDate.ToShortDateString()</td>
                <td>@(course.Grade == null ? "No Grade yet" : course.Grade.ToString())</td>
            </tr>
        }
    </tbody>
</table>
