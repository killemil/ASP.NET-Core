@model IEnumerable<AdminUserListingModel>
@{
    ViewData["Title"] = "All Registered Users";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>@user.Username</td>
                <td>@user.Email</td>
                <td>
                    <a href="/admin/users/details/@user.Id" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>